<form method='post' action='/create'>
  <label for='title'>Title:</label>
  <div>
    <input name='title' id='post' value='<%= params[:title] %>'>
  </div>
  <label for='content'>Content:</label>
  <div>
    <textarea name='content' id='content' rows='20' cols='100'><%= params[:content] %></textarea>
  </div>
  <button type='submit'>Post</button>
  <a href='/'>Cancel</a>
</form>